{
  "name": "@modelcontextprotocol/server-javadc",
  "version": "1.0.0",
  "description": "Model Context Protocol (MCP) server for Java decompilation",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "mcp-javadc": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node --esm src/index.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:setup": "node test-script.js",
    "start:http": "PORT=3000 MCP_USE_HTTP=true node dist/index.js",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint --fix 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts'",
    "prepublishOnly": "npm run lint && npm run build"
  },
  "keywords": [
    "mcp",
    "java",
    "decompiler",
    "modelcontextprotocol",
    "bytecode"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/mcp-javadc.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/mcp-javadc/issues"
  },
  "homepage": "https://github.com/yourusername/mcp-javadc#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.11.4",
    "express": "^4.18.2",
    "fernflower": "^1.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
